<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error', obj: @category %>
      <%= form_with model: @category, local: true, class: "shadow-sm rounded bg-secondary mb-3 p-3" do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light font-weight-bold" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "name of category"%>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      </div>
    <% end %>
    <%= link_to '[Cancel and return to Category List]', categories_path, class: "text-dark mb-3" %>
  </div>
</div>
