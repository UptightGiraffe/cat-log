<div id="page-content-pet-index">
  <h1 class="text-center mt-4"><%=@user.user_name%>'s Profile</h1>
  <%= gravatar_for @user, size: 200 %>
  <div class="text-center mt-4">
    <% if logged_in? && @user == current_user %>
      <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-info" %>
    <% end %>
  </div>
  <h3 class="text-center mt-4">Blogs</h3>
  <div class="apple_pagination">
      <%= will_paginate @blogs, :container => false %>
  </div>
  <%= render 'blogs/blog' %>
  <div class="apple_pagination">
      <%= will_paginate @blogs, :container => false %>
  </div>
</div>
