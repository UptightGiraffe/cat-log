<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error', obj: @user %>
      <%= form_with model: @user, local: true, class: "shadow-sm rounded bg-secondary mb-3 p-3" do |f| %>
        <div class="form-group row">
          <%= f.label :user_name, class: "col-2 col-form-label text-light font-weight-bold" %>
          <div class="col-10">
            <%= f.text_field :user_name, class: "form-control shadow rounded", placeholder: "Enter user Name"%>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light font-weight-bold" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light font-weight-bold" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "choose a password"%>
          </div>
        </div>


        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      </div>

      <%= link_to '[Cancel and return to Blog List]', blogs_path, class: "text-dark mb-3" %>
    <% end %>
  </div>
</div>
