<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error' %>
      <%= form_with model: @blog, local: true, class: "shadow-sm rounded bg-secondary mb-3 p-3" do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light font-weight-bold" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of blog"%>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :content, class: "col-2 col-form-label text-light font-weight-bold" %>
          <div class="col-10">
            <%= f.text_area :content, rows: 10, class: "form-control shadow rounded", placeholder: "Content of blog"%>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      </div>

      <%= link_to '[Cancel and return to Blog List]', blogs_path, class: "text-dark mb-3" %>
    <% end %>
  </div>
</div>
