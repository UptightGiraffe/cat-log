<% if @blog.errors.any? %>
  <h2>Following error occured when saving new blogs.</h2>
  <ul>
  <% @blog.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: @blog, local: true do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :author %><br/>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content, size: "60x12"%>
  </p>

  <p>
    <%= f.submit class: "btn btn-primary" %>
  </p>

  <br>
<% end %>
