<% if obj.errors.any? %>

  <div class="alert alert-danger alert-dismissible fade show text-left mb-3 " role="alert">
    <h4 class="alert-heading">Following error occured when saving new <%= obj.class.name.downcase %>.</h4>
    <ul class="list-group bg-transparent">
    <% obj.errors.full_messages.each do |msg| %>
      <li class="list-group-item bg-transparent border-0"><%= msg %></li>
    <% end %>
    </ul>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

<% end %>
